<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.vetlesolgard.nutritrack">

    <uses-feature android:name="android.hardware.camera"
                  android:required="true" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW" /> <!-- Just a line to avoid message -->
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".snapmeal.SnapMealActivity"/>
        <activity android:name=".utils.CameraControlActivity"/>
        <activity android:name=".recommendations.RecommendationActivity" />

    </application>

</manifest>